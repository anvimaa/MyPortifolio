@page "/certificacoes"
@inject AppService service

<section class="container active">
    <div class="blogs-content">

        <MainTitle Text1="Meus" Text2="Certificados" TextBack="my blog" />

        <div class="blogs">
            @foreach (var item in _itemDatas)
            {
                <CertificacaoItem Image=@item.Image Title=@item.Title Description=@item.Description />
            }

        </div>
    </div>
</section>

@code {
    private List<CertificacaoItemData> _itemDatas = RepositoryData.CertificacaoItems;

    protected override async Task OnInitializedAsync() => _itemDatas = await service.GetCertificacoes();
}
