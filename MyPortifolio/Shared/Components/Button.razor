<div class="btn-con">
    <a href="@Url" class="main-btn">
        <span class="btn-text">@Text</span>
        <span class="btn-icon"><i class="fas @Icon"></i></span>
    </a>
</div>

@code{
    [Parameter]
    public string? Text { get; set; }

    [Parameter]
    public string? Icon { get; set; }

    [Parameter]
    public string? Url { get; set; } = "#";
}
